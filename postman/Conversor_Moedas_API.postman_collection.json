			"item": [
				{
					"name": "1. Testar Cotação USD para BRL",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "https://v6.exchangerate-api.com/v6/b2631255ac4cefb5334dea2f/latest/USD",
							"protocol": "https",
							"host": [
								"v6",
								"exchangerate-api",
								"com"
							],
							"path": [
								"v6",
								"b2631255ac4cefb5334dea2f",
								"latest",
								"USD"
							]
						},
						"description": "Testa a obtenção de cotações do Dólar Americano para outras moedas"
					},
					"response": [],
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Teste 1: Verificar status da resposta",
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"// Teste 2: Verificar se a resposta é JSON",
									"pm.test(\"Response is JSON\", function () {",
									"    pm.response.to.be.json;",
									"});",
									"",
									"// Teste 3: Verificar estrutura da resposta",
									"pm.test(\"Response has required fields\", function () {",
									"    const responseJson = pm.response.json();",
									"    pm.expect(responseJson).to.have.property('base_code');",
									"    pm.expect(responseJson).to.have.property('conversion_rates');",
									"    pm.expect(responseJson).to.have.property('time_last_update_utc');",
									"    pm.expect(responseJson).to.have.property('time_next_update_utc');",
									"});",
									"",
									"// Teste 4: Verificar se base_code é USD",
									"pm.test(\"Base currency is USD\", function () {",
									"    const responseJson = pm.response.json();",
									"    pm.expect(responseJson.base_code).to.eql('USD');",
									"});",
									"",
									"// Teste 5: Verificar se BRL está nas taxas de conversão",
									"pm.test(\"BRL conversion rate exists\", function () {",
									"    const responseJson = pm.response.json();",
									"    pm.expect(responseJson.conversion_rates).to.have.property('BRL');",
									"});",
									"",
									"// Teste 6: Verificar se a taxa BRL é um número válido",
									"pm.test(\"BRL rate is a valid number\", function () {",
									"    const responseJson = pm.response.json();",
									"    pm.expect(responseJson.conversion_rates.BRL).to.be.a('number');",
									"    pm.expect(responseJson.conversion_rates.BRL).to.be.above(0);",
									"});",
									"",
									"// Teste 7: Verificar tempo de resposta",
									"pm.test(\"Response time is less than 2000ms\", function () {",
									"    pm.expect(pm.response.responseTime).to.be.below(2000);",
									"});"
								],
								"type": "text/javascript"
							}
						}
					]
				},
